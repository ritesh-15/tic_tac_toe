generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  username     String   @unique
  email        String   @unique
  password     String
  isInGame     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  tokens       Token[]
  createdGames Game[]   @relation(name: "creatorToId")
  joinedGames  Game[]   @relation(name: "opponent")
  winnedGames  Game[]   @relation(name: "winner")
}

model Token {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  token     String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Game {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  creatorId      String   @db.ObjectId
  creator        User     @relation(fields: [creatorId], references: [id], name: "creatorToId")
  opponentId     String   @db.ObjectId
  opponent       User     @relation(fields: [opponentId], references: [id], name: "opponent")
  board          Json
  winnerId       String?  @db.ObjectId
  winner         User?    @relation(fields: [winnerId], references: [id], name: "winner")
  isFinished     Boolean  @default(false)
  isOpponentTurn Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
